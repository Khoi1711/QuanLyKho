@model IEnumerable<QuanLyKho.Models.DONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KhachHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayLapDonHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GiaTriDH)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayLapDonHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaTriDH)
        </td>
        <td>
            <a href="@Url.Action("Edit","DONHANGs",new { id = item.MaDH})" class="btn btn-sm btn-success">Sửa</a>
            <a href="@Url.Action("Details","DONHANGs",new { id = item.MaDH })" class="btn btn-sm btn-info">Chi tiết</a>
            <a href="@Url.Action("Delete","DONHANGs",new { id = item.MaDH })" class="btn btn-sm btn-danger">Xóa</a>
        </td>
    </tr>
}

</table>
