@model IEnumerable<QuanLyKho.Models.CTPHIEUNHAPKHO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<h2>Chi Tiet Phieu Nhap Kho</h2>
<a href="@Url.Action("Create","CTPHIEUNHAPKHOes")" class="btn btn-sm btn-success" style="padding: 12px">Thêm</a>
<button id="deleteSelectedCTNhap" class="btn btn-danger" style="position:fixed">Xóa các mục đã chọn</button>
<div class="card-body">
    <table class="table table-bordered">
        <tr>
            <th><input type="checkbox" id="checkAll" /></th>
            <th>Mã chi tiết phiếu xuất kho</th>          
            <th>Mã sản phẩm</th>
            <th>Mã phiếu nhập kho</th>
            <th>
                    Đơn giá
            </th>
            <th>
                So luong nhap
            </th>
        </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center"><input type="checkbox" class="checkbox" value="@item.MaCTPNK" /></td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PHIEUNHAPKHO.MaPNK)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SANPHAM.TenSP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongNhap)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaCTPNK }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaCTPNK }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaCTPNK })
                    </td>
                </tr>
            }

        </table>
 </div>